<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="5dp"
  android:foreground="?android:attr/selectableItemBackground"
  android:clickable="true"
  android:focusable="true"
  app:contentPaddingTop="10dp"
  app:contentPaddingBottom="10dp"
  app:contentPaddingRight="15dp"
  app:contentPaddingLeft="15dp"
  app:cardElevation="3dp">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
      android:id="@+id/browse_list_item_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@id/browse_list_item_fav"
      android:text="@string/title_activity_browse"
      android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatImageButton
      android:id="@+id/browse_list_item_fav"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:src="@drawable/ic_favorite_border_red_24dp"
      android:backgroundTint="#00dddddd" />

  </RelativeLayout>

</androidx.cardview.widget.CardView>
